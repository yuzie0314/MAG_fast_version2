/*
========================================================================================
    Nextflow config file for iGenomes paths
========================================================================================
    Defines reference genomes using iGenome paths.
    Can be used by any config that customises the base path using:
        $params.igenomes_base / --igenomes_base
----------------------------------------------------------------------------------------
*/

params {
    // Yourgene-Health Genomes reference file paths
    genomes {
        'hg38' {
            bowtie2 = "/i1/DB/kneaddata_genome/hg38/Homo_sapiens_assembly38"
            fasta   = "/i1/DB/kneaddata_genome/hg38/Homo_sapiens_assembly38.fasta"
        }
    }
    dbs {        
        nr       = "/i1/DB/SqueezeMeta_DB/db/nr.dmnd"
        cog      = "/i1/DB/SqueezeMeta_DB/db/eggnog.dmnd"
        kegg     = "/i1/DB/SqueezeMeta_DB/db/keggdb.dmnd"
        pfam     = "/i1/DB/SqueezeMeta_DB/db/Pfam-A.hmm"
    }

    
}
